<% layout("/Layout/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <h1>Create a New Listing</h1>
    <form method="post" action="/listings" nonvalidate class="needs-validation" enctype="multipart/form-data">
        <br>
        <div class="mg-3">
            <label for ="title" class="form-label">Title</label>
            <input name="listing[title]" Placeholder="Add a Title" type="text" 
        class="form-control" required />
        </div><br>
        
        <div class="mg-3">
            <label for ="description" class="form-label">Description</label>
            <textarea name="listing[description]" 
            class="form-control" required></textarea>
        </div><br>
       
        <!-- <div class="mg-3">
            <label for="image" class="form-label">Image Link</label>
         <input name="listing[image] " Placeholder="Enter image URL/Link" type="link" class="form-control" />
        </div><br> -->

        <div class="mg-3">
            <label for="image" class="form-label">Upload Image</label>
         <input name="listing[image]" Placeholder="Enter image URL/Link"  
         type="file"
         class="form-control" />
        </div>

        
        <div class="mg-3"> 
            <label for="price" class="form-label">price</label>
         <input name="listing[price]" Placeholder="Amount" class="form-control" required/>
         <div class="invalid-feedback">price should be valid</div>
        </div><br>

        <div class="mg-3">
            <label for="country" class="form-label">country</label>
            <input name="listing[country]" Placeholder="India" type="text" class="form-control"/>
        </div><br>

        <div class="mg-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" Placeholder="Enter location"   type="text" class="form-control" required/>
        </div>
        <br>
        
        <button class="btn btn-dark add-btn">Add</button>
        <br><br> <br>

    </form>
</div>
</div>

