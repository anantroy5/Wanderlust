<% layout("/Layout/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
   
    <h1>Edit your Listing</h1>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" nonvalidate class="needs-validation"></form>
        <div class="mg-3">
            <label for ="title" class="form-label">Title</label>
        <input name="listing[title] " value="<%= listing.title %>"type="text" class="form-control" required/></div>
        <br>
        
        <div class="mg-3">
            <label for ="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required> <%= listing.description %> </textarea></div>
        <br>
        
        <div class="mb-3" style="width: 20rem;">
            <img src="<%= listing.image.url%>" />
           </div> <br>

        <div class= "mg-3">
            <label for ="image" class="form-label"> Upload New Image </label>
        <input name="listing[image]" type="file" class="form-control"/></div>
        <br>
        
        <div class="mg-3">
            <label for ="price" class="form-label">Price</label>
        <input name="listing[price] " value="<%= listing.price %>" type ="number" class="form-control" required/></div>
        <br>
        
        <div class="mg-3">
            <label for ="country" class="form-label"> Country</label>
        <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required/></div>
        <br>
        
        <div class="mg-3">
            <label for ="location" class="form-label">Location</label>
        <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required/></div>
        <br>
        
        <button class="btn btn-dark edit-btn">Add</button><br>

    </form>
    <br>
</div>

</div>
